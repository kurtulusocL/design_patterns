@model IEnumerable<GetAllLocationQueryResult>
@{
    ViewData["Title"] = "mediatR Location List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <a asp-controller="Location" asp-action="Create" class="btn btn-outline-primary btn-sm">+ Add New One</a>
        <hr />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>City</th>
                    <th>Province</th>
                    <th>Country</th>
                    <th>Continental</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.City</td>
                        <td>@item.Province</td>
                        <td>@item.Country</td>
                        <td>@item.Continental</td>
                        <td>@item.CreatedDate.ToShortDateString()</td>
                        <td>
                            <a asp-controller="Location" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                            <a asp-controller="Location" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                            <a asp-controller="Location" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>