@model Product
@{
    ViewData["Title"] = "Update to Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h4>@ViewData["Title"]</h4>
        <div class="col-md-10">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <label>Product Name</label>
                    <input type="text" asp-for="Name" value="@Model.Name" class="form-control" />
                </div>
                <div class="row">
                    <label>Product Description</label>
                    <input type="text" asp-for="Description" value="@Model.Description" class="form-control" />
                </div>
                <div class="row">
                    <label>Product Purchase Price</label>
                    <input type="text" asp-for="PurchasePrice" value="@Model.PurchasePrice" class="form-control" />
                </div>
                <div class="row">
                    <label>Product Sale Price</label>
                    <input type="text" asp-for="SalePrice" value="@Model.SalePrice" class="form-control" />
                </div>
                <div class="row">
                    <label>Product Tax Percent</label>
                    <input type="text" asp-for="Tax" value="@Model.Tax" class="form-control" />
                </div>
                <div class="row">
                    <label>Unit In Stock</label>
                    <input type="text" asp-for="UnitInStock" value="@Model.UnitInStock" class="form-control" />
                </div>
                <hr />
                <div class="row">
                    <button type="submit" class="btn btn-outline-primary">Update Product</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning btn-sm">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
       @if (TempData["success"] != null)
        {
            <strong>@TempData["success"]</strong>
        }
        else
        {
            <strong>@TempData["error"]</strong>
        }
    </div>
</div>